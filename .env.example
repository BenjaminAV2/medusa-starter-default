# ========================================
# ENVIRONNEMENT
# ========================================
NODE_ENV=development

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/medusa-v2
DB_NAME=medusa-v2

# ========================================
# REDIS (optionnel, pour cache & sessions)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# CORS & SECURITY
# ========================================
STORE_CORS=http://localhost:8000,https://docs.medusajs.com
ADMIN_CORS=http://localhost:5173,http://localhost:9000,https://docs.medusajs.com
AUTH_CORS=http://localhost:5173,http://localhost:9000,https://docs.medusajs.com

# IMPORTANT: Générer des secrets forts avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
COOKIE_SECRET=your-super-secret-cookie-key-here-min-32-chars

# ========================================
# PAIEMENTS - STRIPE
# ========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================================
# PAIEMENTS - PAYPAL
# ========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ========================================
# STOCKAGE - CLOUDFLARE R2 (ou AWS S3)
# ========================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET=client-uploads
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# ========================================
# EMAILS - RESEND
# ========================================
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@votre-domaine.com

# ========================================
# ANALYTICS & TRACKING (optionnel)
# ========================================
POSTHOG_API_KEY=
SENTRY_DSN=

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# APPLICATION
# ========================================
APP_URL=http://localhost:9000
FRONTEND_URL=http://localhost:3000
